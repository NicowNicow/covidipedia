@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "S'enregistrer";
}

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">Veuillez associez votre compte @Model.ProviderDisplayName.</h4>
<hr />

<p id="external-login-description" class="text-info">
    Vous vous êtes enregistré avec <strong>@Model.ProviderDisplayName</strong>.
    Merci d'entrer une addresse mail et d'appuyer sur "S'senregistrer" pour terminer votre inscription.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">S'enregistrer</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
