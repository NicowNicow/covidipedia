@page
@model covidipedia.front.src.Pages.Admin.IndexModel
@using covidipedia.front.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> _UserManager
@{
    ViewData["Title"] = "Index";
}
<h1 class="card-title mb-0">All Users</h1>
<hr/>
<a asp-page="Create" class="btn btn-sm btn-secondary">Create New</a>
<a asp-page="Role" class="btn btn-sm btn-secondary">Role</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr><th>ID</th><th>Name</th><th>Email</th><th>RPPS</th><th>Update</th><th>Delete</th></tr>
    </thead>
    <tbody>
        @foreach (var user in _UserManager.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.RPPS</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                </td>
                <td>
                    <a asp-page="./Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>