@page
@model covidipedia.front.src.Pages.Admin.RoleCreateModel
@{
    ViewData["Title"] = "Créer un rôle";
}
<body>
    <h1>@ViewData["Title"]</h1>
    <hr/>
    <a asp-page="./Index" class="btn btn-secondary">Retour</a>
    <div asp-validation-summary="All" class="text-danger"></div>

    <form method="post">

        <div class="form-group">
            <label asp-for="Input.RoleName" class="control-label"></label>
            <input asp-for="Input.RoleName" class="form-control" />
            <span asp-validation-for="Input.RoleName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Créer</button>
    </form>
</body>